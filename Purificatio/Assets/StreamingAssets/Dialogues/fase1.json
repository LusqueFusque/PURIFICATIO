    },
    {
      "id": "exorcismo_completo",
      "character": "Nambú",
      "sprite": "Nambu_medo",
      "text": "...Cristo.",
      "nextId": "Flor_silencio"
    },
    {
      "id": "Flor_silencio",
      "character": "Sr. Florentino",
      "sprite": "Flor_chocado",
      "text": "...",
      "nextId": "Flor_gorjeta"
    },
    {
      "id": "Flor_gorjeta",
      "character": "Sr. Florentino",
      "sprite": "Flor_feliz",
      "text": "Vou dar uma gorjeta pelo serviço bem feito...",
      "nextId": "timbu_parabeniza1",
      "mission": "fadeOut"
    },
    {
      "id": "timbu_parabeniza1",
      "character": "Timbu",
      "sprite": "Timbu_sorriso",
      "text": "Boa, meu chapa. Fez tudo direitinho!",
      "nextId": "timbu_parabeniza2"
    },
    {
      "id": "timbu_parabeniza2",
      "character": "Timbu",
      "sprite": "Timbu_aiai",
      "text": "Agora o fantasma daquela pobre menininha pode finalmente partir pra a próxima e descansar...",
      "nextId": "timbu_parabeniza3"
    },
    {
      "id": "timbu_parabeniza3",
      "character": "Timbu",
      "sprite": "Timbu_ladin",
      "text": "...",
      "nextId": "timbu_parabeniza4"
    },
    {
      "id": "timbu_parabeniza4",
      "character": "Timbu",
      "sprite": "Timbu_sorriso",
      "text": "E melhor ainda... O dinheiro do serviço já caiu na conta!",
      "nextId": "fim_fase1_exorcismo"
    },
    {
      "id": "fim_fase1_exorcismo",
      "character": "Sistema",
      "sprite": "",
