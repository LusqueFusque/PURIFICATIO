    },
    {
      "id": "rota_honesto1",
      "character": "Nambú",
      "sprite": "Nambu_sorriso",
      "text": "É, pode ficar com ela.",
      "nextId": "eveline_feliz"
    },
    {
      "id": "eveline_feliz",
      "character": "Eveline",
      "sprite": "Seta",
      "text": "Minha... boneca... Vou brincar... tanto... com você...",
      "nextId": "Flor_silencio2"
    },
    {
      "id": "Flor_silencio2",
      "character": "Sr. Florentino",
      "sprite": "Flor_neutro",
      "text": "...",
      "nextId": "Flor_questiona"
    },
    {
      "id": "Flor_questiona",
      "character": "Sr. Florentino",
      "sprite": "Flor_neutro",
      "text": "Tá, mas e o exorcismo?",
      "nextId": "nambu_recusa1"
    },
    {
      "id": "nambu_recusa1",
      "character": "Nambú",
      "sprite": "Nambu_eheh",
      "text": "Foi mal, cara, não vai rolar. A casa é da boyzinha aí.",
      "nextId": "Flor_revolta1"
    },
    {
      "id": "Flor_revolta1",
      "character": "Sr. Florentino",
      "sprite": "Flor_raiva",
      "text": "Tá me tirando!? Eu paguei caro por esse serviço!",
      "nextId": "nambu_recusa2"
    },
    {
      "id": "nambu_recusa2",
      "character": "Nambú",
      "sprite": "Nambu_eheh",
      "text": "Pois é... Mas é aquela história... Sabe como é, né? Complicado, mesmo...",
      "nextId": "Flor_revolta2"
    },
    {
      "id": "Flor_revolta2",
      "character": "Sr. Florentino",
      "sprite": "Flor_raiva",
      "text": "Ah, não! Nana-nina-não!",
      "nextId": "Flor_revolta3"
    },
    {
      "id": "Flor_revolta3",
      "character": "Sr. Florentino",
      "sprite": "Flor_raiva",
      "text": "Eu vou continuar as obras, com ou sem fantasmas!",
      "nextId": "eveline_brava1"
    },
    {
      "id": "eveline_brava1",
      "character": "Eveline",
      "sprite": "Seta",
      "text": "Minha... Minha casa... Minha!",
      "nextId": "Flor_revolta4"
    },
    {
      "id": "Flor_revolta4",
      "character": "Sr. Florentino",
      "sprite": "Flor_raiva",
      "text": "Pode ser sua, da sua tia ou da sua avó! Eu não ligo!",
      "nextId": "nambu_tenta_avisar"
    },
    {
      "id": "nambu_tenta_avisar",
      "character": "Nambú",
      "sprite": "Nambu_que",
      "text": "Aí, cara, se eu fosse você, eu...",
      "nextId": "Flor_insiste"
    },
    {
      "id": "Flor_insiste",
      "character": "Sr. Florentino",
      "sprite": "Flor_raiva",
      "text": "Eu vou continuar essa reforma de um jeito ou de outro!",
      "mission": "poltergeistTransformation"
    },
    {
      "id": "pos_poltergeist1",
      "character": "Nambú",
      "sprite": "Nambu_medo",
      "text": "Oh, céus.",
      "nextId": "pos_poltergeist2"
    },
    {
      "id": "pos_poltergeist2",
      "character": "Sr. Florentino",
      "sprite": "Flor_raiva",
      "text": "Ei! Ei! O que é isso!? Me larga!",
      "nextId": "pos_poltergeist3"
    },
    {
      "id": "pos_poltergeist3",
      "character": "Nambú",
      "sprite": "Nambu_medao",
      "text": "(Sebo nas canelas!)",
      "nextId": "pos_poltergeist4"
    },
    {
      "id": "pos_poltergeist4",
      "character": "Sr. Florentino",
